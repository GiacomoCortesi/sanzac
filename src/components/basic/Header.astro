---
// Components
import Drawer from '@components/basic/Drawer.astro';
import Logo from '@components/basic/Logo.tsx'
import Lightswitch from '@components/basic/Lightswitch.astro';
// Icons
import { Linkedin, Github, Instagram, Mail } from "lucide-react";


const coreLinks = [
	{ href: '/', label: 'Home', target: '_self' },
	{ href: '/calendar', label: 'Calendar', target: '_self' },
	{ href: '/about', label: 'About', target: '_self' },
	{ href: '/contacts', label: 'Contacts', target: '_self' },
];
---

<header
	class="sticky top-0 z-50 border-b-[1px] border-surface-500/20 bg-surface-50/90 dark:bg-surface-950/90 backdrop-blur w-full h-[70px] flex items-center"
>
	<div
		class="container mx-auto grid max-w-screen-2xl grid-cols-[auto_1fr_auto] xl:grid-cols-[1fr_auto_1fr] items-center gap-4 px-4 xl:px-10"
	>
		<!-- Left -->
		<div class="flex items-stretch justify-start gap-4">
			<!-- Mobile Nav Drawer -->
			<Drawer navigation={coreLinks} />
			<!-- Logo -->
			<a class="hidden xl:inline-block" href="/" title="SanZak Studio">
				<Logo>
			</a>
			<div class="hidden xl:flex items-center">
				<!-- Version Picker -->
				<!-- <HeaderVersion client:load /> -->
				<!-- Navigation -->
				{
					coreLinks.map((link) => (
						<a class="btn hover:preset-tonal" href={link.href} target={link.target}>
							{link.label}
						</a>
					))
				}
			</div>
		</div>
		<!-- Middle -->
		<div class="flex items-center gap-2">
		</div>
		<!-- Right -->
		<div class="flex justify-end items-stretch gap-2">
			<!-- Mode and Theme -->
			<Lightswitch />
			<!-- Divider -->
			<span class="border-r border-surface-200-800"></span>
			<!-- Social -->
			<nav class="flex items-center gap-1">
				<a class="btn-icon hover:preset-tonal" href="mailto:info@sanzak.it">
					<Mail size={20} />
				</a>
				<a class="btn-icon hover:preset-tonal" href="https://www.instagram.com/sanzak.studio/" target="_blank">
					<Instagram size={20} />
				</a>
			</nav>
		</div>
	</div>
</header>